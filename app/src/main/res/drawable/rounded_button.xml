<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- سایه -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#22000000"/> <!-- رنگ سایه (مشکی با شفافیت) -->
            <corners android:radius="24dp"/>
            <size android:width="48dp"
                android:height="48dp"/>
        </shape>
    </item>

    <!-- دکمه اصلی -->
    <item android:left="0dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSecendydark"/> <!-- رنگ پس‌زمینه دکمه -->
            <corners android:radius="24dp"/>
        </shape>
    </item>

</layer-list>
